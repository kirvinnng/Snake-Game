{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe compilar archivo activo",
			"command": "C:/MinGW/bin/gcc.exe",
			"args": [
				"-g",
				"snake.c",
				"gui.c",
				"snake_function.c",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "C:/MinGW/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: C:/MinGW/bin/gcc.exe"
		}
	]
}